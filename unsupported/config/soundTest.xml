<?xml version="1.0" encoding="utf-8"?>
<dmz>
  <plugins>
    <plugin name="dmzInputModuleBasic"/>
    <plugin name="dmzInputPluginControllerKey"/>
    <plugin name="dmzRenderModuleCoreOSGBasic" unload="false"/>
    <plugin name="dmzRenderModulePortalOSG"/>
    <plugin name="dmzRenderPluginViewerOSG"/>
    <plugin name="dmzRenderPluginLoadModelOSG"/>
    <plugin name="dmzRenderPluginEventHandlerOSG"/>
    <plugin name="dmzPluginSoundTest"/>
    <plugin name="dmzPluginExit"/>
    <plugin name="dmzAudioModulePortalBasic"/>
    <plugin name="dmzAudioModuleFMOD"/>
    <plugin name="dmzAudioPluginSoundLoader"/>
  </plugins>
  <runtime>
    <time>
      <frequency value="0.0"/>
    </time>
    <types>
      <data name="data">
        <attribute type="string" size="1" name="value"/>
        <attribute type="float64" size="1" name="time"/>
      </data>
      <message name="stringmsg"/>
    </types>
  </runtime>
  <dmzRenderPluginViewerOSG>
    <name value="viewer1"/>
    <window left="100" top="100" width="800" height="600" screen="0"/>
<!--    <fullscreen screen="0"/>-->

    <camera value="portal1"/>
  </dmzRenderPluginViewerOSG>
  <dmzRenderModulePortalOSG>
    <name value="portal1"/>
    <cullRange near="1.0" far="100.0"/>
    
    <viewer value="viewer1"/>
  </dmzRenderModulePortalOSG>
  <dmzRenderPluginLoadModelOSG>
    <model name="Crater" file="C:/dmz/assets/models/Jupiter_Moon_Io/Crater.flt" x="0" y="0" z="-70"/>
    <model name="cessna"    file="cessna.osg" x="-40" y="0" z="0"/>
    <model name="dumptruck" file="dumptruck.osg" x="200" y="0" z="0"/>
  </dmzRenderPluginLoadModelOSG>
  <dmzPluginSoundTest>
    <movement speed="100" turnRate="3"/>
  </dmzPluginSoundTest>
  <dmzAudioModulePortalBasic>
    <name value="audioportal1"/>
  </dmzAudioModulePortalBasic>
  <dmzAudioPluginSoundLoader>
    <!--sound effect locations are not the same as model locations (even though they 
        are supposed to be located in the same place in the 3d world), due to problem
        with different coordinate systems between FMOD and OSG, and it's effect on the
        orientation of the OSG camera and FMOD listener.
        -->
    <sound name="engine" file="C:/dmz/assets/sounds/samples/game_engine.wav" loop="True" pitchScale="1.0" x="40.0" y="0.0" z="0.00"/>
    <sound name="wave" file="C:/dmz/assets/sounds/samples/wave.mp3" loop="True" pitchScale="1.0" x="-200.0" y="0.0" z="0.0"/>
  </dmzAudioPluginSoundLoader>
  <dmzAudioModuleFMOD>
    <dopplerScale value="1.0"/>
    <distanceFactor value="1.0"/>
    <rollOffScale value="1.0"/>
    <maxChannels value="256"/>
    <rightHandedCoordinates value="True"/>
    <forceFullDirectSoundHRTF value="True"/>
  </dmzAudioModuleFMOD>
</dmz>
